{
    "_extends": "tslint:recommended",
    "rulesDirectory": "node_modules/tslint-microsoft-contrib",
    "_rules": {
        "semicolon": "never",
        "no-trailing-whitespace": false,
        "triple-equals": [ "allow-null-check", "allow-undefined-check" ],
        "quotemark": [ "double", "avoid-escape" ],
        "trailing-comma": { "multiline": "never", "singleline": "never" },
        "curly": false
    }
}